{% macro shopItemCard(params) %}

      <article>
        {% if params.image %}
        <div 
          style="background-image: url('{{ params.image }}');" 
          alt="{{ params.name }}"
          width="60"
          height="60"
          class="shopItem__img">
        </div>
        {% endif %}
        <div class="shopItem__mainInfos">
          <h2 class="shopItem__name">{{ params.name }}</h2>
          <p class="shopItem__price"> {{ params.priceDisplay }} </p>
        </div>

        <a href="/products/{{params.name}}/index.html">LINK TO PAGE</a>
          
        
        <p class="shopItem__collection">collection {{params.collection}}</p>
      </article>


{% endmacro %}